{
  "extends": "astro/tsconfigs/base",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@data/*": ["src/data/*"],
      "@/styles/*": ["src/styles/*"],
      "@layouts/*": ["src/layouts/*"],
      "@article/*": ["src/content/article/*"],
      "@assets/*": ["src/assets/*"]
    }
  }
}
