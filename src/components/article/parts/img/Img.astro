---
import { Image } from "astro:assets";
const {src, alt, type} = Astro.props;
---

<Image src={src} alt={alt} class:list={['image', type]} />

<style lang="scss">
  .image {
    width: 100%;
    height: auto;

    &.border {
      border: .1rem solid var.$c-gray-l;
    }

    &.shadow {
      box-shadow: 0 0 1.6rem 1rem rgba(0,0,0,0.04);

      @include mixin.sp {
        box-shadow: 0 0 1.2rem .6rem rgba(0,0,0,0.04);
      }
    }
  }
</style>