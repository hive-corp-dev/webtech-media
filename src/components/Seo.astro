---
import {SEO} from 'astro-seo';

import {SITE_NAME, OG_IMAGE_URL} from '@data/metadata';

const {title = SITE_NAME, description, ogImageUrl = OG_IMAGE_URL, ogType = 'website', noindex = false, nofollow = false} = Astro.props;
---

<SEO
  title={title}
  description={description}
  openGraph={{
    basic: {
      title: title,
      type: ogType,
      image: ogImageUrl,
    },
    optional: {
      description: description,
    }
  }}
  twitter={{
    card: "summary_large_image",
    site: '@tatsuya_webdev',
    image: ogImageUrl,
  }}
  noindex={noindex}
/>