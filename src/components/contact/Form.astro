<form class="form" method="post" action="https://hyperform.jp/api/m1Ci69UU">
  <div class="row">
    <label class="label"><span class="required">必須</span>お名前</label>
    <div class="control">
      <input type="text" name="お名前" placeholder="例）山田太郎" required>
    </div>
  </div>
  <div class="row">
    <label class="label">会社名</label>
    <div class="control">
      <input type="text" name="会社名" placeholder="例）株式会社WebTech Media" required>
    </div>
  </div>
  <div class="row">
    <label class="label"><span class="required">必須</span>メールアドレス</label>
    <div class="control">
      <input type="email" name="email" placeholder="例）example@example.com" required>
    </div>
  </div>
  <div class="row">
    <label class="label -pt-none"><span class="required">必須</span>お問い合わせ内容</label>
    <div class="control">
      <ul class="radio">
        <li class="radio-item">
          <input id="cat-1" type="radio" name="お問い合わせ内容" value="記事に関するご質問" required>
          <label for="cat-1">記事に関するご質問</label>
        </li>
        <li class="radio-item">
          <input id="cat-2" type="radio" name="お問い合わせ内容" value="お仕事の依頼について" required>
          <label for="cat-2">お仕事の依頼について</label>
        </li>
        <li class="radio-item">
          <input id="cat-3" type="radio" name="お問い合わせ内容" value="その他" required>
          <label for="cat-3">その他</label>
        </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <label class="label"><span class="required">必須</span>お問い合わせ詳細</label>
    <div class="control">
      <textarea name="お問い合わせ詳細" required></textarea>
    </div>
  </div>
  <div class="btn-row">
    <button class="btn" type="submit">送信する</button>
  </div>
</form>

<style lang="scss">
.form {
  display: flex;
  flex-direction: column;
  gap: 3.2rem;

  @include mixin.sp {
    gap: 2.4rem;
  }
}

.row {
  display: flex;
  width: 100%;

  @include mixin.sp {
    flex-direction: column;
  }
}

.label {
  width: 24rem;
  flex-shrink: 0;
  padding-top: 1.2rem;
  font-weight: bold;

  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  gap: .8rem;

  &.-pt-none {
    padding-top: 0;
  }

  span {
    display: inline-block;
    font-size: 1rem;
    padding: .2rem .4rem;
    transform: translateY(.4rem);

    &.required {
      background-color: var.$c-main-v;
      color: var.$c-white;
    }

    &.optional {
      background-color:#c1c1cd;
      color: var.$c-white;
    }
  }
}

.control {
  flex-grow: 1;
  font-size: 1.6rem;

  @include mixin.sp {
    margin-top: 1.2rem;
  }

  input, textarea {
    width: 100%;
    border: .1rem solid #c1c1cd;
    padding: 1.2rem 1.2rem;

    &::placeholder {
      color: #7c7c8a;
    }
  }

  textarea {
    height: 30rem;
    resize: vertical;

    @include mixin.sp {
      height: 24rem;
    }
  }
}

.radio {
  display: flex;
  flex-wrap: wrap;
  gap: 1.2rem 2.4rem;

  @include mixin.sp {
    margin-top: 1rem;
    gap: 1.2rem;
    flex-direction: column;
  }

  &-item {
    position: relative;
    display: flex;
    align-items: center;
    gap: .8rem;
    cursor: pointer;
    padding-left: 2rem;

    label {
      &::before, &::after {
        content: '';
        position: absolute;
        border-radius: 50%;
        display: block;
      }
      
      &::before {
        left: 0;
        top: 0.4rem;
        width: 1.6rem;
        height: 1.6rem;
        border:.1rem solid #c1c1cd;
      }

      &::after {
        left: .3rem;
        top: .7rem;
        width: 1rem;
        height: 1rem;
        background-color: #c1c1cd;
        opacity: 0;
      }
    }

    input {
      display: none;
      width: .1rem;
      height: .1rem;
      padding: 0;
      border: none;

      &:checked {

        & + label {
          &::before {
            border-color: var.$c-main-v;
          }

          &::after {
            background-color: var.$c-main-v;
            opacity: 1;
          }
        }
      }
    }
  }
}

.btn-row {
  padding-left: 24rem;

  @include mixin.sp {
    padding-left: 0;
  }
}

.btn {
  width: 28rem;
  height: 6rem;
  background-color: var.$c-main-v;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var.$c-white;
  font-weight: bold;
  cursor: pointer;
  transition: all .3s;

  @include mixin.sp {
    width: 22rem;
    height: 4.8rem;
    margin: 0 auto;
    font-size: 1.4rem;
  }

  @include mixin.hover {
    &:hover {
      background-color: var.$c-main;
    }
  }
}

</style>